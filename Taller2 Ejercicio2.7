// Leer 15 números negativos y convertirlos a positivos e imprimir dichos números.
import java.util.Scanner;
public class Ejercicios2_7 {
    public static void main(String[] args) {
        Scanner consola = new Scanner(System.in);
        
        int i = 1;
        while (i <= 15){
            System.out.println("Ingrese el numero negativo " + i + " :");
            int numero = consola.nextInt();
            
            if (numero < 0){
                numero = numero * -1;
            }
            System.out.println("El numero positivo " + i + " es: " + numero);
            i++;
        }
    }
}
