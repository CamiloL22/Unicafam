public class CalculoCuadrado {
    public static void main(String[] args) {
        // Definir una instancia de Scanner para leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Entrada: Leer el lado del cuadrado
        System.out.print("Ingrese la longitud del lado del cuadrado: ");
        double lado = scanner.nextDouble();

        // Proceso: Calcular el área y el volumen del cuadrado
        double area = lado * lado;
        double volumen = lado * lado * lado;

        // Salida: Imprimir los resultados
        System.out.println("----- Resultados -----");
        System.out.println("Lado del cuadrado: " + lado);
        System.out.println("Área del cuadrado: " + area);
        System.out.println("Volumen del cuadrado: " + volumen);
    }
}
