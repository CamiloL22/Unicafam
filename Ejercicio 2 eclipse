public class CalculoCirculo {
    public static void main(String[] args) {
        // Definir una instancia de Scanner para leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Entrada: Leer el radio del círculo
        System.out.print("Ingrese el radio del círculo: ");
        double radio = scanner.nextDouble();

        // Proceso: Calcular el diámetro, el perímetro y el área del círculo
        double diametro = 2 * radio;
        double perimetro = 2 * Math.PI * radio;
        double area = Math.PI * Math.pow(radio, 2);
        double volumen = 0;  // No hay cálculo de volumen para un círculo

        // Salida: Imprimir los resultados
        System.out.println("----- Resultados -----");
        System.out.println("Radio del círculo: " + radio);
        System.out.println("Diámetro del círculo: " + diametro);
        System.out.println("Perímetro del círculo: " + perimetro);
        System.out.println("Área del círculo: " + area);
        System.out.println("Volumen del círculo: " + volumen);
    }
}
